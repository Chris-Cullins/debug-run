{
  "name": "debug-run",
  "version": "0.1.0",
  "description": "CLI tool enabling AI agents to programmatically debug code via DAP",
  "type": "module",
  "main": "dist/index.cjs",
  "bin": {
    "debug-run": "dist/index.cjs"
  },
  "scripts": {
    "prepare": "husky",
    "build": "node scripts/build.mjs",
    "dev": "tsx ./src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@vscode/debugprotocol": "^1.65.0",
    "chalk": "^5.0.0",
    "commander": "^12.0.0",
    "glob": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "^1.0.0",
    "esbuild": "^0.27.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chris-Cullins/debug-run.git"
  },
  "keywords": [
    "debug",
    "dap",
    "debugger",
    "cli",
    "ai",
    "agent"
  ],
  "author": "",
  "license": "MIT"
}
